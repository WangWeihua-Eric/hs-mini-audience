@import '../../style/flex-base.wxss'

.audience-content {
    height: 100%;
    width: 100%;
    box-sizing: border-box;
    padding: 160rpx 20rpx 47rpx 16rpx;
}

.audience-header {
    width: 100%;
}

.audience-header-left {
    width: 365rpx;
    height: 80rpx;
    background: rgba(0, 0, 0, 0.25);
    border-radius: 45rpx;
}

.audience-teacher-img {
    width: 68rpx;
    height: 68rpx;
    border-radius: 50%;
    margin-left: 6rpx;
    overflow: hidden;
}

.audience-teacher-info {
    height: 100%;
    margin-left: 4rpx;
}

.audience-teacher-name {
    font-size: 28rpx;
    font-family: PingFangSC-Medium,PingFang SC;
    font-weight: 500;
    color: rgba(255, 255, 255, 1);
}

.audience-teacher-tag {
    font-size: 26rpx;
    font-family: PingFangSC-Regular,PingFang SC;
    color: rgba(255, 255, 255, 1);
}

.add-action-img {
    width: 48rpx;
    height: 48rpx;
    border-radius: 50%;
    overflow: hidden;
    margin-right: 14rpx;
}

.audience-user-img-list {
    margin-right: 11rpx;
}

.audience-user-rank {
    height: 100%;
    margin-left: 6rpx;
}

.audience-user-img {
    width: 56rpx;
    height: 56rpx;
    border-radius: 50%;
    overflow: hidden;
}

.audience-user-tag {
    width: 62rpx;
    height: 21rpx;
    border-radius: 10.5rpx;
    margin-top: -10rpx;
}

.switch-window-info {
    width: 100rpx;
    height: 100rpx;
}

.switch-window-btn {
    width: 84rpx;
    height: 84rpx;
    border-radius: 50%;
    overflow: hidden;
}

.audience-bottom {
    width: 100%;
    height: 100%;
/*    background-color: white;*/
}

.audience-bottom-info {
    width: 100%;
}

.live-list-content {
    max-height: 369rpx;
    box-sizing: border-box;
    padding-left: 9rpx;
    overflow: scroll;
    margin-bottom: 63rpx;
}

.scroll-content {
    max-height: 369rpx;
    scrollbar-width: none;
}

.live-text-item {
    max-width: 460rpx;
    background: rgba(0, 0, 0, 0.29);
    border-radius: 30rpx;
    box-sizing: border-box;
    padding: 16rpx;
    font-size: 30rpx;
    font-family: SourceHanSansCN-Normal,SourceHanSansCN;
    color: rgba(245, 185, 83, 1);
    margin-bottom: 10rpx;
}

.text-msg {
    color: #FFFFFF;
}

.input-temp {
    width:380rpx;
    height:84rpx;
    background:rgba(0,0,0,0.25);
    border-radius:42rpx;
    box-sizing: border-box;
    padding-left: 32rpx;
    font-size:28rpx;
    font-family:SourceHanSansCN-Normal,SourceHanSansCN;
    color: white;
    display: flex;
    justify-content: flex-start;
    align-items: center;
    margin-right: 21rpx;
}

.share-live {
    width: 84rpx;
    height: 84rpx;
    border-radius: 50%;
    overflow: hidden;
    margin-left: 21rpx;
    margin-right: 30rpx;
}

.send-rose {
    width: 84rpx;
    height: 84rpx;
    border-radius: 50%;
    overflow: hidden;
}

.pre-link {
    width:190rpx;
    height:84rpx;
    background:rgba(255,255,255,1);
    border-radius:42rpx;
    font-size:32rpx;
    font-family:SourceHanSansCN-Medium,SourceHanSansCN;
    font-weight:500;
    color:rgba(0,0,0,1);
    margin-left: 30rpx;
}

.call-down {
    width: 100%;
}

.call-down-btn {
    width:460rpx;
    height:100rpx;
    background:#E95544;
    border-radius:50rpx;
    font-size:36rpx;
    font-family:SourceHanSansCN-Medium,SourceHanSansCN;
    font-weight:500;
    color:rgba(255,255,255,1);
}

.rose-btn {
    height: 100%;
}

.real-input {
    width: 100%;
    height: 132rpx;
    background-color: white;
    position: absolute;
    left: 0;
    box-sizing: border-box;
    padding: 22rpx 16rpx;
}

.real-input-border {
    width: 100%;
}

.sheet-content {
    box-sizing: border-box;
    padding: 73rpx 29rpx 28rpx 29rpx;
    width: 100%;
}

.sheet-title {
    font-size:42rpx;
    font-family:SourceHanSansCN-Medium,SourceHanSansCN;
    font-weight:500;
    color:rgba(255,255,255,1);
    box-sizing: border-box;
    padding: 0 0 60rpx 2rpx;
    border-bottom: 1rpx solid #484647;
    width: 100%;
}

.sub-sheet-text {
    font-size:30rpx;
    font-family:SourceHanSansCN-Regular,SourceHanSansCN;
    color:rgba(186,186,186,1);
    margin-top: 19rpx;
}

.sheet-sub-tip {
    font-size:30rpx;
    font-family:SourceHanSansCN-Regular,SourceHanSansCN;
    color:rgba(135,135,135,1);
    margin-top: 180rpx;
    margin-bottom: 214rpx;
}

.link-content {
    width: 100%;
    margin-top: 24rpx;
}

.user-link-item {
    width: 100%;
    box-sizing: border-box;
    padding: 25rpx 0;
}

.item-order {
    font-size:30rpx;
    font-family:PingFangSC-Medium,PingFang SC;
    font-weight:500;
    color:rgba(178,178,178,1);
}

.item-user-img {
    width:64rpx;
    height:64rpx;
    border-radius: 50%;
    overflow: hidden;
    margin-left: 34rpx;
}

.item-user-name {
    font-size:30rpx;
    font-family:SourceHanSansCN-Medium,SourceHanSansCN;
    font-weight:500;
    color:rgba(255,255,255,1);
    margin-left: 30rpx;
}

.item-link-status {
    font-size:30rpx;
    font-family:SourceHanSansCN-Regular,SourceHanSansCN;
    color:rgba(89,89,89,1);
}

.hidden-close-sheet {
    background-color: #4FC955;
    border-radius: 10rpx;
    width: 692rpx;
    height: 84rpx;
    font-size:32rpx;
    font-family:SourceHanSansCN-Medium,SourceHanSansCN;
    font-weight:500;
    color:rgba(255,255,255,1);
    margin-top: 49rpx;
}

.cancel-sheet {
    background-color: #C94F58;
    border-radius: 10rpx;
    width: 692rpx;
    height: 84rpx;
    font-size:32rpx;
    font-family:SourceHanSansCN-Medium,SourceHanSansCN;
    font-weight:500;
    color:rgba(255,255,255,1);
    margin-top: 49rpx;
}

.in-link-tip {
    font-size:48rpx;
    font-family:SourceHanSansCN-Bold,SourceHanSansCN;
    font-weight:bold;
    color:rgba(255,255,255,1);
}

.call-time {
    font-size:160rpx;
    font-family:SourceHanSansCN-Heavy,SourceHanSansCN;
    font-weight:800;
    color:rgba(182,182,182,1);
}


::-webkit-scrollbar {
    width: 0;
    height: 0;
    color: transparent;
}